{
    "id": "XamarinAndroid",
    "name": "Xamarin.Android",
    "category": "Build",
    "defaultHostedQueue": "Hosted Windows 2019 with VS 2019",
    "description": "Build an Android app and Xamarin.UITest assembly. Test with App Center.",
    "iconTaskId": "27EDD013-36FD-43AA-96A3-7D73E1E35285",
    "template": {
        "buildNumberFormat": "$(date:yyyyMMdd)$(rev:.r)",
        "build": [
            {
                "enabled": true,
                "displayName": "Use NuGet 4.4.1",
                "task": {
                  "id": "2c65196a-54fd-4a02-9be8-d9d1837b7c5d",
                  "versionSpec": "0.*",
                  "definitionType": "task"
                },
                "inputs": {
                  "versionSpec": "4.4.1",
                  "checkLatest": "false"
                }
              },
            {
                "enabled": true,
                "inputs": {
                    "command": "restore",
                    "solution": "**/*.sln",
                    "selectOrConfig": "select",
                    "includeNuGetOrg": "true"
                },
                "task": {
                    "id": "333b11bd-d341-40d9-afcf-b32d5ce6f23b",
                    "versionSpec": "2.*"
                }
            },
            {
                "enabled": true,
                "inputs": {
                    "project": "**/*Droid*.csproj",
                    "outputDir": "$(build.binariesdirectory)/$(BuildConfiguration)",
                    "configuration": "$(BuildConfiguration)"
                },
                "task": {
                    "id": "27EDD013-36FD-43AA-96A3-7D73E1E35285",
                    "versionSpec": "1.*"
                }
            },
            {
                "enabled": false,
                "inputs": {
                    "project": "**/*test*.csproj",
                    "outputDir": "$(build.binariesdirectory)/$(BuildConfiguration)/test-assembly",
                    "configuration": "$(BuildConfiguration)",
                    "createAppPackage": "false"
                },
                "task": {
                    "id": "27EDD013-36FD-43AA-96A3-7D73E1E35285",
                    "versionSpec": "1.*"
                }
            },
            {
                "enabled": false,
                "inputs": {
                    "app": "$(build.binariesdirectory)/$(BuildConfiguration)/*.apk",
                    "testDir": "$(build.binariesdirectory)/$(BuildConfiguration)/test-assembly",
                    "testCloudLocation": "**/packages/**/tools/test-cloud.exe"
                },
                "task": {
                    "id": "049918CB-1488-48EB-85E8-C318ECCAAA74",
                    "versionSpec": "1.*"
                }
            },
            {
                "enabled": true,
                "inputs": {
                    "files": "$(build.binariesdirectory)/$(BuildConfiguration)/*.apk",
                    "apksign": "false",
                    "zipalign": "false"
                },
                "task": {
                    "id": "80F3F6A0-82A6-4A22-BA7A-E5B8C541B9B9",
                    "versionSpec": "3.*"
                }
            },
            {
                "enabled": false,
                "displayName": "Enable this task to deploy this application to App Center. To create an App Center account and learn more, see https://appcenter.ms/.",
                "inputs": {
                    "app": "$(build.binariesdirectory)/$(BuildConfiguration)/*.apk",
                    "symbolsType": "AndroidJava",
                    "symbolsPath": "$(build.binariesdirectory)/$(BuildConfiguration)/**/local/obj",
                    "mappingTxtPath": "$(build.binariesdirectory)/$(BuildConfiguration)/**/mapping.txt"
                },
                "task": {
                    "id": "b832bec5-8c27-4fef-9fb8-6bec8524ad8a",
                    "versionSpec": "2.*"
                }
            },
            {
                "enabled": true,
                "alwaysRun": true,
                "inputs": {
                    "PathtoPublish": "$(build.binariesdirectory)/$(BuildConfiguration)",
                    "ArtifactName": "drop",
                    "ArtifactType": "Container"
                },
                "task": {
                    "id": "2ff763a7-ce83-4e1f-bc89-0ae63477cebe",
                    "versionSpec": "1.*"
                }
            }
        ],
        "options": [],
        "variables": {
            "system.debug": {
                "value": "false",
                "allowOverride": true
            },
            "BuildConfiguration": {
                "value": "Release"
            }
        },
        "triggers": []
    }
}
