<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:msprop="urn:schemas-microsoft-com:xml-msprop" xmlns:msdata="urn:schemas-microsoft-com:xml-msdata">
    <xs:element name="ProcessTemplate">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="metadata" minOccurs="1" maxOccurs="1">
                    <xs:complexType>
                        <xs:all>
                            <xs:element name="name" msprop:nullValue="_throw" minOccurs="1" maxOccurs="1">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:maxLength value="124" />
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="description" type="xs:string" minOccurs="1" maxOccurs="1" msprop:nullValue="_empty" />
                            <xs:element name="version" minOccurs="0" maxOccurs="1">
                                <xs:complexType>
                                    <xs:attribute name="type" type="xs:string" use="required"/>
                                    <xs:attribute name="major" type="xs:int" use="required"/>
                                    <xs:attribute name="minor" type="xs:int" use="required"/>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="plugins" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="plugin" minOccurs="1" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                </xs:sequence>
                                                <xs:attribute name="name" type="xs:string" use="required" msprop:nullValue="_throw" />
                                                <xs:attribute name="wizardPage" type="xs:boolean" use="required" msprop:nullValue="_throw" />
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:all>
                    </xs:complexType>
                </xs:element>
                <xs:element name="groups" minOccurs="1" maxOccurs="1" nillable="false">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element maxOccurs="unbounded" name="group" minOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="dependencies" minOccurs="1" maxOccurs="1">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element maxOccurs="unbounded" name="dependency" minOccurs="0" nillable="false">
                                                        <xs:complexType>
                                                            <xs:attribute name="groupId" type="xs:string" use="required" msprop:nullValue="_throw" />
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="taskList" minOccurs="1" maxOccurs="1" nillable="false">
                                            <xs:complexType>
                                                <xs:attribute name="filename" type="xs:string" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="id" type="xs:string" use="required" msprop:nullValue="_throw" msdata:Caption="This id must be unique in the xml file." />
                                    <xs:attribute name="description" type="xs:string" use="required" msprop:nullValue="_empty" />
                                    <xs:attribute name="completionMessage" type="Max256String" use="required" msprop:nullValue="_throw" />
                                    <xs:attribute name="failureMessage" type="xs:string" use="optional" msprop:nullValue="_empty" />
                                </xs:complexType>
                                
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                    <xs:key name="UniqueGroupId">
                        <xs:selector xpath=".//group" />
                        <xs:field xpath="@id" />
                    </xs:key>
                    <xs:key name="UniqueTaskList">
                      <xs:selector xpath=".//group" />
                      <xs:field xpath="taskList/@filename" />
                    </xs:key>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:simpleType name="Max256String">
      <xs:restriction base="xs:string">
        <xs:maxLength value="256" />
      </xs:restriction>
    </xs:simpleType>
</xs:schema>