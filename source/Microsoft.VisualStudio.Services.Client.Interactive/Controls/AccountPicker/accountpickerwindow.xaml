<Window x:Class="Microsoft.VisualStudio.Services.Client.Controls.AccountPicker.AccountPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Choose an account" Height="151.767" Width="410.58" ShowInTaskbar="false"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static JetSystemColors.ControlBrushKey}}" SizeToContent="Height">
  <StackPanel>
    <TextBlock x:Name="Header" Text="Choose your account:" VerticalAlignment="Center" Margin="10"/>
    <ComboBox x:Name="AccountComboBox" Margin="10,0" DisplayMemberPath="DisplayName"
              ItemsSource="{Binding Path=Accounts}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,30,10,10">
      <Button Click="OkButton_Click" x:Name="OkButton" Width="95" Margin="5,0" Padding="1,3" IsDefault="true"
              Content="Select"/>
      <Button Click="CancelButton_Click" x:Name="CancelButton" Width="95" Margin="5,0" Padding="1,3"
              IsCancel="true" Content="New..."/>
    </StackPanel>
  </StackPanel>
</Window>